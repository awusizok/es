# Create data1 index 
POST /data1
{
  "settings": {
    "analysis": {
      "analyzer": {
        "demoAnalyzer": {
          "type": "standard",
          "filter": "demoFilter"
        }
      },
      "filter": {
        "demoFilter": {
          "type": "lowercase"
        }
      }
    }
  },
  "mappings": {
    "customer": {
      "properties": {
        "firstName": {
          "type": "string",
          "analyzer": "demoAnalyzer"
        },
        "lastName": {
          "type": "string",
          "analyzer": "demoAnalyzer"
        },
        "birthday": {
          "type": "date",
          "format": "yyyy-MM-dd"
        },
        "phone": {
          "type": "string"
        },
        "street": {
          "type": "string",
          "analyzer": "demoAnalyzer"
        },
        "city": {
          "type": "string",
          "analyzer": "demoAnalyzer"
        },
        "zipCode": {
          "type": "string",
          "analyzer": "demoAnalyzer"
        },
        "tags": {
          "type": "string",
          "store": "yes",
          "index": "not_analyzed"
        }
      }
    }
  }
}

